<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OneUISampleApp" parent="OneUITheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
    </style>

    <style name="Theme.OneUISampleApp.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_branding</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <item name="postSplashScreenTheme">@style/Theme.OneUISampleApp</item>
    </style>

    <style name="ButtonStyle.Colored" parent="OneUI.ButtonStyleColored">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/oui_round_and_bgcolor</item>
        <item name="android:drawableTint">@color/oui_round_and_bgcolor</item>
        <item name="tint">@color/oui_round_and_bgcolor</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="OneUI.ButtonStyleTransparent">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:drawableTint">@color/oui_primary_icon_color</item>
        <item name="tint">@color/oui_primary_icon_color</item>
    </style>

    <style name="ButtonStyle.Filled" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/filled_background_color</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:drawableTint">@color/oui_primary_text_color</item>
        <item name="tint">@color/oui_primary_text_color</item>
    </style>

    <style name="DrawerDividerStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:foreground">@drawable/drawer_item_separator_bg</item>
    </style>

    <!-- OOBE -->
    <style name="OOBE.TextView.Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">24.0dp</item>
        <item name="android:layout_marginEnd">24.0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36.0sp</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="OOBE.TextView.ToS" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/oui_primary_text_color_not_themed</item>
        <item name="android:textColorLink">@color/oui_relative_link_title_text_color</item>
        <item name="android:lineSpacingExtra">3.0dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="OOBE.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16.0dp</item>
        <item name="android:paddingEnd">16.0dp</item>
        <item name="android:background">@drawable/oobe_button_background</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/oui_primary_text_color_not_themed</item>
    </style>

</resources>