<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ButtonStyle.Colored" parent="ButtonStyle">
        <item name="android:theme">@style/OneUI.ContainedPrimaryColorButtonTheme</item>
    </style>

    <style name="ButtonStyle.Filled" parent="ButtonStyle">
        <item name="android:theme">@style/OneUI.ContainedButtonTheme</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="ButtonStyle">
        <item name="android:theme">@style/OneUI.ContainedTransparentButtonTheme</item>
    </style>

    <style name="ButtonStyle.Transparent.Themed" parent="ButtonStyle.Transparent">
        <item name="android:textColor">@color/primary_text_icon_color_themed</item>
        <item name="android:drawableTint">@color/primary_text_icon_color_themed</item>
        <item name="tint">@color/primary_text_icon_color_themed</item>
    </style>

    <style name="ButtonStyle.Transparent.Colored" parent="ButtonStyle.Transparent">
        <item name="android:textColor">@color/primary_color_themed</item>
        <item name="android:drawableTint">@color/primary_color_themed</item>
        <item name="tint">@color/primary_color_themed</item>
    </style>

    <!-- OOBE -->
    <style name="OOBE.TextView.ToS" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_icon_color</item>
        <item name="android:textColorLink">@color/primary_color_themed</item>
    </style>

</resources>